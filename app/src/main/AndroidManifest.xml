<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dong.moviedb">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.framgia.hien.moviedb.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.framgia.hien.moviedb.screen.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.framgia.hien.moviedb.screen.detail.DetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name="com.framgia.hien.moviedb.screen.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name="com.framgia.hien.moviedb.screen.play.PlayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name="com.framgia.hien.moviedb.screen.person.PersonActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />
        <activity
            android:name="com.framgia.hien.moviedb.screen.company.CompanyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomAppTheme" />
    </application>
</manifest>
